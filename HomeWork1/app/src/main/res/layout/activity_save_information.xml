<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstrainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SaveInformation">


    <TextView
        android:id="@+id/textView"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Lưu Thông TIn"
        android:textColor="#EB0707"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/tv1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Họ :"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tv2"
        app:layout_constraintEnd_toStartOf="@+id/tvShowHo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Họ lót :"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tv3"
        app:layout_constraintEnd_toStartOf="@+id/tvShowHoLot"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv1" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Tên :"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toStartOf="@+id/tvShowTen"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Mã SV :"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tv5"
        app:layout_constraintEnd_toStartOf="@+id/tvShowMaSV"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv3" />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Điện thoại :"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tvNSinh"
        app:layout_constraintEnd_toStartOf="@+id/tvShowDienThoai"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/tvNSinh"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Ngày sinh :"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tvGT"
        app:layout_constraintEnd_toStartOf="@+id/tvShowNgaySinh"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv5" />

    <TextView
        android:id="@+id/tvGT"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Giới tính :"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tv8"
        app:layout_constraintEnd_toStartOf="@+id/tvShowGioiTinh"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNSinh" />


    <TextView
        android:id="@+id/tv8"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="IdKhoa :"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvShowIDKhoa"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvGT" />

    <TextView
        android:id="@+id/tvShowHo"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tvShowHoLot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv1"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/tvShowHoLot"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tvShowTen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv2"
        app:layout_constraintTop_toBottomOf="@+id/tvShowHo" />

    <TextView
        android:id="@+id/tvShowTen"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tvShowMaSV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv3"
        app:layout_constraintTop_toBottomOf="@+id/tvShowHoLot" />

    <TextView
        android:id="@+id/tvShowMaSV"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tvShowDienThoai"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/tvShowTen" />

    <TextView
        android:id="@+id/tvShowDienThoai"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:autoLink="phone"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tvShowNgaySinh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv5"
        app:layout_constraintTop_toBottomOf="@+id/tvShowMaSV" />

    <TextView
        android:id="@+id/tvShowNgaySinh"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tvShowGioiTinh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvNSinh"
        app:layout_constraintTop_toBottomOf="@+id/tvShowDienThoai" />

    <TextView
        android:id="@+id/tvShowGioiTinh"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tvShowIDKhoa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvGT"
        app:layout_constraintTop_toBottomOf="@+id/tvShowNgaySinh" />

    <TextView
        android:id="@+id/tvShowIDKhoa"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv8"
        app:layout_constraintTop_toBottomOf="@+id/tvShowGioiTinh" />


</androidx.constraintlayout.widget.ConstraintLayout>