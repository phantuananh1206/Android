<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddDepartment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Id Khoa :" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Tên Khoa :" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtAddIdKhoa"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Nhập id khoa"
            android:inputType="number" />

        <EditText
            android:id="@+id/edtAddTenKhoa"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Nhập tên khoa"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/imgbtnSave"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#060D13"
            android:backgroundTint="#00BCD4"
            app:srcCompat="@android:drawable/ic_menu_save" />

        <Button
            android:id="@+id/btnExit3"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Thoát" />

    </LinearLayout>

</LinearLayout>